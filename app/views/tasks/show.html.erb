<h1> <%= @task.title %> </h1>
<div class="alert alert-secondary" role="alert">
  <%= @task.details %>
</div>
<p class="details"><i class="fas fa<%= '-check' if @task.completed %>-square"></i>
  That task is  <%= 'completed' if @task.completed  %>
  <%= 'NOT completed' if @task.completed == false %>
</p>